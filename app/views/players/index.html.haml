.col-xs-12.col-sm-12.col-md-12.col-lg-12
  .big-padding
    .big-padding{"style"=>"border:solid #f7f7f9;"}
      %h1 Players
      %table.table.table-striped 
        %thead
          %tr
            %th #
            %th First name
            %th Last name
            %th.hidden-sm-down Telefono
            %th.hidden-sm-down Email
            %th.hidden-sm-down Movil
            %th.hidden-sm-down Number
            %th.hidden-sm-down Team
            %th

        %tbody
          - @players.each do |player|
            %tr
              %td= player.id
              %td= player.first_name
              %td= player.last_name
              %td.hidden-sm-down= player.telefono
              %td.hidden-sm-down= player.email
              %td.hidden-sm-down= player.movil
              %td.hidden-sm-down= player.number_id
              %td.hidden-sm-down= player.team.name
              %td
                .dropdown
                  %button.btn.btn-secondary.dropdown-toggle{"type"=>"button","id"=>"actions","data-toggle"=>"dropdown","aria-haspopup"=>"true","aria-expanded"=>"false"} Actions
                  .dropdown-menu{"aria-labelledby"=>"actions"}
                    = link_to 'Show', player,:class=>"dropdown-item"
                    = link_to 'Edit', edit_player_path(player),:class=>"dropdown-item"
                    = link_to 'Destroy', player, :method => :delete, :class=>"dropdown-item",:data => { :confirm => 'Are you sure?' }
      %br

      %a.btn.btn-success{"href"=>"/players/new"} <i class="fa fa-plus" aria-hidden="true"></i> Add
