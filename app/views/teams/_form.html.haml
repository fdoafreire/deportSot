= form_for @team do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name
    = f.text_field :name,class:"form-control"
  .form-group
    = f.label :curso
    = f.text_field :curso,class:"form-control"
  .form-group
    = f.label :user
    = f.collection_select(:user_id, @users, :id, :fullname, {:prompt=>true}, {:class=>'form-control'})
  .form-group
    = f.label :championship
    = f.collection_select(:championship_id, @championships, :id, :name, {:prompt=>true}, {:class=>'form-control'})
  .form-group
    = f.submit 'Save', class:"btn btn-success"
