= form_for @team,:html => { :multipart => true } do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .form-group.row
    = f.label :name,class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.text_field :name,class:"form-control"
  .form-group.row
    = f.label :curso,class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.text_field :curso,class:"form-control"
  .form-group.row
    = f.label :user,class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.collection_select(:user_id, @users, :id, :fullname, {:prompt=>true}, {:class=>'form-control'})
  .form-group.row
    = f.label :championship,class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.collection_select(:championship_id, @championships, :id, :name, {:prompt=>true}, {:class=>'form-control'})
  .form-group.row
    = f.label :escudo,class:"col-sm-2 col-xs-12 col-form-label"
    .col-sm-4.col-xs-12
      = f.file_field :escudo,class:"form-control"
  .form-group.row
    .offset-sm-2.col-sm-4
      %button.btn.btn-success{"type"=>"submit"}
        %i.fa.fa-floppy-o{"aria-hidden"=>"true"}
        %span  Save team

